{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "*": [
        "types/*"
      ]
    },
    "module": "commonjs",
    "lib": [
      "es2017",
      "es2016",
      "es2015",
      "dom"
    ],
    "noImplicitAny": true,
    "allowJs": false,
    "removeComments": true,
    "target": "es6",
    "jsx": "react",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": true,
    "typeRoots": [
      "src"
    ]
  },
  "rules": {
    "no-console": false,
    "interface-name": [
      true,
      "never"
    ]
  }
}